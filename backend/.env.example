# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/threat_hunt_db
# For development, you can also use SQLite:
# DATABASE_URL=sqlite:///./threat_hunt.db

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# =====================================================
# THREAT INTELLIGENCE API KEYS
# =====================================================

# --- Core Feeds (Recommended) ---

# AlienVault OTX - Free community threat intelligence
# Get key from: https://otx.alienvault.com/api
OTX_API_KEY=your-otx-api-key

# GreyNoise - Internet scanner intelligence (10k queries/month free)
# Get key from: https://www.greynoise.io/
GREYNOISE_API_KEY=your-greynoise-api-key

# --- Sandbox & Reputation Services ---

# VirusTotal - File/URL reputation (500 requests/day free)
# Get key from: https://www.virustotal.com/gui/my-apikey
VIRUSTOTAL_API_KEY=your-vt-api-key

# Hybrid Analysis - Malware sandbox (200 submissions/month free)
# Get key from: https://www.hybrid-analysis.com/apikeys/info
HYBRID_ANALYSIS_API_KEY=

# Shodan - Internet device search (100 queries/month free)
# Get key from: https://account.shodan.io/
SHODAN_API_KEY=

# URLScan.io - URL scanning (optional, increases rate limits)
# Get key from: https://urlscan.io/user/profile/
URLSCAN_API_KEY=

# --- IP & URL Reputation ---

# AbuseIPDB - IP abuse database (1,000 checks/day free)
# Get key from: https://www.abuseipdb.com/account/api
ABUSEIPDB_API_KEY=

# PhishTank - Phishing URL database (free)
# Get key from: https://www.phishtank.com/api_info.php
PHISHTANK_API_KEY=

# Pulsedive - Community threat intelligence (30 req/min free)
# Get key from: https://pulsedive.com/account/
PULSEDIVE_API_KEY=

# --- Threat Intelligence Platforms ---

# MISP - Malware Information Sharing Platform (requires instance)
MISP_URL=
MISP_API_KEY=

# OpenCTI - Open Cyber Threat Intelligence (requires instance)
OPENCTI_URL=
OPENCTI_API_KEY=

# --- Premium/Commercial Services (Optional) ---
THREATCONNECT_API_KEY=
RECORDEDFUTURE_API_KEY=

# =====================================================
# FREE FEEDS (NO API KEY REQUIRED)
# =====================================================
# - Abuse.ch URLhaus, ThreatFox, Malware Bazaar, Feodo Tracker, SSL Blacklist
# - CISA Known Exploited Vulnerabilities
# - Blocklist.de, Spamhaus DROP/EDROP
# - RSS feeds (CISA, SANS, security blogs)

# Update Schedules (in hours)
MITRE_UPDATE_INTERVAL=24
THREAT_INTEL_UPDATE_INTERVAL=6

# Query Generation Settings
DEFAULT_TIMEFRAME=7d
MAX_QUERY_RESULTS=1000

